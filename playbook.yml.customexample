---

- name: Set up a Raspberry Pi 3 as AP to a custom OpenVPN
  hosts: pis
  roles:
    - role: pi
      wifi:
        ip_address: "172.24.1.1/24"
        channel: 6
        ssid: "passy-pi"
        passphrase: "raspberrypi"
      dhcp:
        range: "172.24.1.50,172.24.1.150"
      firewall:
        mode: "tunnel"
    - role: custom-openvpn
      openvpn:
        ovpn: "./myvpn.ovpn"
  remote_user: pi
  become: yes
  become_method: sudo
